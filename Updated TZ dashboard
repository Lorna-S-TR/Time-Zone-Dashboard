    <script>
        let homeTimezone = 'Europe/London';
        let homeLocationName = 'London, England';
        
        const usZones = [
            { name: 'New York, NY', zone: 'America/New_York', code: 'EST/EDT' },
            { name: 'Los Angeles, CA', zone: 'America/Los_Angeles', code: 'PST/PDT' },
            { name: 'Chicago, IL', zone: 'America/Chicago', code: 'CST/CDT' },
            { name: 'Phoenix, AZ', zone: 'America/Phoenix', code: 'MST' },
            { name: 'Denver, CO', zone: 'America/Denver', code: 'MST/MDT' },
            { name: 'Atlanta, GA', zone: 'America/New_York', code: 'EST/EDT' },
            { name: 'Dallas, TX', zone: 'America/Chicago', code: 'CST/CDT' },
            { name: 'Seattle, WA', zone: 'America/Los_Angeles', code: 'PST/PDT' },
            { name: 'Miami, FL', zone: 'America/New_York', code: 'EST/EDT' },
            { name: 'Las Vegas, NV', zone: 'America/Los_Angeles', code: 'PST/PDT' },
            { name: 'Anchorage, AK', zone: 'America/Anchorage', code: 'AKST/AKDT' },
            { name: 'Honolulu, HI', zone: 'Pacific/Honolulu', code: 'HST' }
        ];
        
        const auZones = [
            { name: 'Sydney, NSW', zone: 'Australia/Sydney', code: 'AEST/AEDT' },
            { name: 'Melbourne, VIC', zone: 'Australia/Melbourne', code: 'AEST/AEDT' },
            { name: 'Brisbane, QLD', zone: 'Australia/Brisbane', code: 'AEST' },
            { name: 'Adelaide, SA', zone: 'Australia/Adelaide', code: 'ACST/ACDT' },
            { name: 'Perth, WA', zone: 'Australia/Perth', code: 'AWST' },
            { name: 'Darwin, NT', zone: 'Australia/Darwin', code: 'ACST' },
            { name: 'Hobart, TAS', zone: 'Australia/Hobart', code: 'AEST/AEDT' }
        ];
        
        function createZoneCard(zone) {
            const now = new Date();
            
            const timeStr = now.toLocaleString('en-GB', {
                timeZone: zone.zone,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            });
            
            const zoneTime = new Date(now.toLocaleString('en-US', { timeZone: zone.zone }));
            const hour = zoneTime.getHours();
            const isBusinessHours = hour >= 9 && hour < 17; // 9 AM to 5 PM
            
            // Simple calling window calculation
            const homeTime = new Date(now.toLocaleString('en-US', { timeZone: homeTimezone }));
            const homeHour = homeTime.getHours();
            
            // Calculate rough time difference
            const zoneDiff = zoneTime.getHours() - homeTime.getHours();
            const startCall = (9 - zoneDiff + 24) % 24;
            const endCall = (17 - zoneDiff + 24) % 24;
            
            const formatTime = (h) => {
                const hour = h % 24;
                return hour.toString().padStart(2, '0') + ':00';
            };
            
            const callingWindow = `${formatTime(startCall)} - ${formatTime(endCall)} your time`;
            
            const cardClass = isBusinessHours ? 'timezone-card good-call' : 'timezone-card outside-hours';
            const statusClass = isBusinessHours ? 'status status-good' : 'status status-outside';
            const statusText = isBusinessHours ? 'ğŸ“ Good to Call Now' : 'ğŸŒ™ Outside Business Hours';
            
            return `
                <div class="${cardClass}">
                    <div class="location-name">${zone.name}</div>
                    <div class="timezone-code">${zone.code}</div>
                    <div class="time">${timeStr}</div>
                    <div class="calling-window">Call between: ${callingWindow}</div>
                    <span class="${statusClass}">${statusText}</span>
                </div>
            `;
        }
        
        function updateAllTimes() {
            // Update home time
            const now = new Date();
            const homeTime = now.toLocaleString('en-GB', {
                timeZone: homeTimezone,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            });
            
            document.getElementById('homeTime').textContent = `Your Time: ${homeTime}`;
            document.getElementById('homeLocationDisplay').textContent = `ğŸ“ ${homeLocationName}`;
            
            // Update US zones
            const usContainer = document.getElementById('us-zones');
            usContainer.innerHTML = usZones.map(zone => createZoneCard(zone)).join('');
            
            // Update AU zones  
            const auContainer = document.getElementById('au-zones');
            auContainer.innerHTML = auZones.map(zone => createZoneCard(zone)).join('');
        }
        
        // Handle dropdown change
        document.getElementById('homeLocation').addEventListener('change', function() {
            const value = this.value;
            const parts = value.split('|');
            homeTimezone = parts[0];
            homeLocationName = parts[1];
            updateAllTimes();
        });
        
        // Initialize
        updateAllTimes();
        setInterval(updateAllTimes, 1000);
    </script>
